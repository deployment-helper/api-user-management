{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "./__tests__",
    "./dist",
    "./deps",
    "**/**.test.*",
    "./coverage",
    "./__mocks__",
    "./jest.config.js",
    "./webpack.config.js"
  ]
}
